@using ErfanLearn.Core.DTOs;
@using ErfanLearn.Core.Convertors;
@model ChargeWalletViewModel

@{
    ViewData["Title"] = "کیف پول";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">عرفان لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> کیف پول شما </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> کیف پول </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="Index" method="post">

                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="amount"><i class="zmdi zmdi-balance-wallet"></i></span>
                                            <input type="number" class="form-control" asp-for="Amount" placeholder="مبلغ" aria-describedby="amount">
                                        </div>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> افزایش اعتبار </button>
                                    </div>
                                </div>

                            </form>

                            <hr />
                            @{
                                List<WalletViewModel> list = ViewBag.ListWallet as List<WalletViewModel>;
                                int count = 0;
                            }
                            <table class="table table-bordered">
                                <tr>

                                    <th></th>
                                    <th>شرح</th>
                                    <th>نوع تراکنش</th>
                                    <th>تاریخ</th>
                                    <th>مبلغ</th>

                                </tr>
                                @foreach (var item in list)
                                {
                                    <tr>
                                         
                                        <td>
                                            @{
                                                count = count + 1;
                                            }
                                            @count
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>                                
                                        <td>
                                            @item.TypeDisplay
                                        </td>
                                        <td>
                                            @item.CreateDate.ToShamsi()
                                        </td>
                                        
                                        <td>
                                            @item.Amount.ToString("#,0 ریال")
                                        </td>

                                    </tr>
                                }
                                @if (list != null)
                                {
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>@ViewBag.Balance.ToString("#,0 ریال")</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>